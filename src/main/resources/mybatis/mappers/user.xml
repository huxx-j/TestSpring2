<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <resultMap id="rm" type="UserVo">
        <result column="num" property="num" />
        <result column="id" property="userId" />
        <result column="pw" property="pw" />
        <result column="name" property="name" />
        <result column="regDate" property="regDate" />
    </resultMap>

    <select id="getAll" resultMap="rm">
        <![CDATA[
        select id,name,regDate from users
        ]]>
    </select>

    <insert id="add" parameterType="UserVo" >
        <![CDATA[
        INSERT INTO users(id, pw, name, regDate) VALUES (#{userId},#{pw},#{name},CURRENT_DATE)
        ]]>
    </insert>

    <select id="get" parameterType="UserVo" resultMap="rm">
        <![CDATA[
        SELECT num,id,pw,name,regDate FROM sungwoo_test.users WHERE name=#{name}
]]>
    </select>

    <select id="">
        <![CDATA[
        INSERT INTO `bitacademy_test`.`Users` (
        `AuthCode`, `NameHan`, `NameEng`, `LoginID`, `Password`, `BirthDate`, `StudResNum`, `Address`, `FamilyAddress`, `PostNum`, `Handphone`, `Telephone`, `Email`, `HomePage`, `Bank`, `Depositor`, `AccountNum`, `MillArm`, `MillRank`, `MillEnrollDate`, `MillDischargeDate`, `MillIncompletReason`, `Language`, `OS`, `ProLang`, `Magazine`, `Newspaper`, `AfterPlan`, `Motive`, `LearningContent`, `ConsultContent`, `Thesis`, `File_no`)
        VALUES (`AuthCode`, `NameHan`, `NameEng`, `LoginID`, `Password`, `BirthDate`, `StudResNum`, `Address`, `FamilyAddress`, `PostNum`, `Handphone`, `Telephone`, `Email`, `HomePage`, `Bank`, `Depositor`, `AccountNum`, `MillArm`, `MillRank`, `MillEnrollDate`, `MillDischargeDate`, `MillIncompletReason`, `Language`, `OS`, `ProLang`, `Magazine`, `Newspaper`, `AfterPlan`, `Motive`, `LearningContent`, `ConsultContent`, `Thesis`, `File_no`)
)
        ]]>
    </select>

</mapper>